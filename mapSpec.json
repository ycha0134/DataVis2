{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 500,
  "data": {
    "url": "enhanced_renewable_energy_projects.csv",
    "format": {"type": "csv"}
  },
  "projection": {
    "type": "mercator",
    "center": [135, -25],
    "scale": 1500
  },
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/vega/vega-datasets/master/data/world-110m.json",
        "format": {"type": "topojson", "feature": "countries"}
      },
      "mark": {
        "type": "geoshape",
        "fill": "#e0e0e0",
        "stroke": "white"
      }
    },
    {
      "mark": "circle",
      "encoding": {
        "longitude": {"field": "Longitude", "type": "quantitative"},
        "latitude": {"field": "Latitude", "type": "quantitative"},
        "size": {
          "field": "Capacity_MW",
          "type": "quantitative",
          "scale": {"range": [100, 1000]},
          "legend": {"title": "Capacity (MW)"}
        },
        "color": {
          "field": "Type",
          "type": "nominal",
          "scale": {
            "domain": ["Solar", "Wind", "Hydro"],
            "range": ["orange", "red", "blue"]
          },
          "legend": {"title": "Energy Type"}
        },
        "tooltip": [
          {"field": "Project_Name", "type": "nominal", "title": "Project Name"},
          {"field": "Type", "type": "nominal", "title": "Energy Type"},
          {"field": "Capacity_MW", "type": "quantitative", "title": "Capacity (MW)"},
          {"field": "Year_Operational", "type": "quantitative", "title": "Operational Since"},
          {"field": "State", "type": "nominal", "title": "State"},
          {"field": "Investment_Cost_Million_AUD", "type": "quantitative", "title": "Investment Cost (Million AUD)"},
          {"field": "CO2_Reduction_Tons", "type": "quantitative", "title": "CO2 Reduction (Tons)"}
        ]
      }
    }
  ]
}
