{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 500,
  "data": {
    "url": "renewable_energy_projects.csv",
    "format": {"type": "csv"}
  },
  "projection": {
    "type": "mercator",
    "center": [135, -28],  
    "scale": 2000 
  },
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/vega/vega-datasets/master/data/world-110m.json",
        "format": {"type": "topojson", "feature": "countries"}
      },
      "mark": {
        "type": "geoshape",
        "fill": "#e0e0e0",
        "stroke": "white"
      }
    },
    {
      "mark": {
        "type": "circle",
        "size": 300,  
        "opacity": 0.8  
      },
      "encoding": {
        "longitude": {"field": "Longitude", "type": "quantitative"},
        "latitude": {"field": "Latitude", "type": "quantitative"},
        "size": {
          "field": "Capacity_MW",
          "type": "quantitative",
          "scale": {"range": [150, 1200]}, 
          "legend": {"title": "Capacity (MW)"}
        },
        "color": {
          "field": "Type",
          "type": "nominal",
          "scale": {
            "domain": ["Solar", "Wind", "Hydro"],
            "range": ["orange", "red", "blue"]
          },
          "legend": {"title": "Energy Type"}
        },
        "tooltip": [
          {"field": "Project_Name", "type": "nominal", "title": "Project Name"},
          {"field": "Type", "type": "nominal", "title": "Energy Type"},
          {"field": "Capacity_MW", "type": "quantitative", "title": "Capacity (MW)"},
          {"field": "Latitude", "type": "quantitative", "title": "Latitude"},
          {"field": "Longitude", "type": "quantitative", "title": "Longitude"}
        ]
      }
    }
  ]
}
