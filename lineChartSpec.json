{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 800,
    "height": 400,
    "data": {
        "url": "energy_over_time.csv",
        "format": {
            "type": "csv"
        }
    },
    "mark": {
        "type": "line",
        "point": {"filled": true, "size": 50}, 
        "tooltip": true
    },
    "encoding": {
        "x": {
            "field": "Year_Operational",
            "type": "temporal",
            "timeUnit": "year", 
            "title": "Year"
        },
        "y": {
            "aggregate": "sum",
            "field": "Capacity_MW",
            "type": "quantitative",
            "title": "Total Capacity (MW)"
        },
        "color": {
            "field": "Type",
            "type": "nominal",
            "title": "Energy Type",
            "legend": {"orient": "bottom-right"}
        },
        "opacity": {
            "condition": {
                "param": "highlight",
                "value": 1
            },
            "value": 0.3
        },
        "tooltip": [
            {
                "field": "Year_Operational",
                "type": "temporal",
                "timeUnit": "year",
                "title": "Year"
            },
            {
                "aggregate": "sum",
                "field": "Capacity_MW",
                "type": "quantitative",
                "title": "Total Capacity (MW)"
            },
            {
                "field": "Type",
                "type": "nominal",
                "title": "Energy Type"
            }
        ]
    },
    "params": [
        {
            "name": "highlight",
            "select": {
                "type": "point",
                "fields": ["Type"],
                "on": "click",
                "toggle": false,
                "clear": "mouseout"
            },
            "bind": "legend"
        }
    ]
}
