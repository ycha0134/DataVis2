{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 800,
    "height": 400,
    "data": {
        "url": "enhanced_renewable_energy_projects.csv",
        "format": {
            "type": "csv"
        }
    },
    "mark": "bar",
    "encoding": {
        "x": {
            "field": "Type",
            "type": "nominal",
            "title": "Energy Type"
        },
        "y": {
            "aggregate": "sum",
            "field": "Investment_Cost_Million_AUD",
            "type": "quantitative",
            "title": "Total Investment Cost (Million AUD)"
        },
        "color": {
            "field": "Type",
            "type": "nominal"
        }
    }
}