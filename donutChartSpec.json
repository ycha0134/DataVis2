{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 400,
    "height": 400,
    "data": {
        "url": "renewable_energy_projects.csv",
        "format": {
            "type": "csv"
        }
    },
    "mark": {
        "type": "arc",
        "innerRadius": 100,
        "tooltip": true
    },
    "encoding": {
        "theta": {
            "aggregate": "sum",
            "field": "Capacity_MW",
            "type": "quantitative",
            "title": "Total Capacity (MW)"
        },
        "color": {
            "field": "Type",
            "type": "nominal",
            "title": "Energy Type",
            "legend": {"orient": "right"},
            "scale": {"scheme": "category10"}
        },
        "opacity": {
            "condition": {
                "param": "highlight",
                "value": 1
            },
            "value": 0.4
        },
        "tooltip": [
            {
                "field": "Type",
                "type": "nominal",
                "title": "Energy Type"
            },
            {
                "aggregate": "sum",
                "field": "Capacity_MW",
                "type": "quantitative",
                "title": "Total Capacity (MW)"
            }
        ]
    },
    "params": [
        {
            "name": "highlight",
            "select": {
                "type": "point",
                "fields": ["Type"],
                "on": "click",
                "toggle": false,
                "clear": "mouseout"
            }
        }
    ]
}
